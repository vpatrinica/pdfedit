@inherits LayoutComponentBase

<div class="app-shell">
    <header class="app-header d-flex align-items-center px-3 py-2 gap-3 flex-wrap">
        <h4 class="m-0 flex-grow-1">PdfEdit</h4>
        <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-decoration-none small">About</a>
    </header>
    <main class="p-3">
        @Body
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .app-shell { min-height:100vh; display:flex; flex-direction:column; }
    .app-header { background:#222; color:#fff; box-shadow:0 2px 4px rgba(0,0,0,.2); }
    .app-header a { color:#ddd; }
    main { flex:1 1 auto; }
</style>
